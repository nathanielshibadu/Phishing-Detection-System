{
  "manifest_version": 3,
  "name": "PhishGuard (Local)",
  "version": "1.0",
  "description": "Classify current page with local PhishGuard API",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/*", "http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
