{
  "manifest_version": 3,
  "name": "PhishGuard (Local)",
  "version": "1.1",
  "description": "Real-time phishing URL detection powered by a local PhishGuard ML model.",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["http://127.0.0.1:5000/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "service_worker.js"
  },

  "web_accessible_resources": [{
    "resources": [
      "admin/dashboard.html",
      "admin/dashboard.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
